procedure TMiner.AntiBan();
var
  CPH: Double;
  PauseLen: Int32;
  Counter: TCountDown;
  SkillInfo: TSkillInfo;
begin
  Inc(__RndCalls);
  CPH := Max(1, __RndCalls / (GetTimeRunning() / (1000*60*60)));

  if srl.DismissRandom() then
    Inc(Self.BotStats.DismissedRandoms);

  {+-|  TASK  |+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-}
  if (24 * 4.0) > Random(round(CPH) * 24) then {4 per hour}
  begin
    WriteLn('[RND] Hovering players');
    srl.HoverRandomPlayer();
  end;
  {+-|  TASK  |+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-}
  if (24 * 3.0) > Random(round(CPH) * 24) then {3 per hour}
  begin
    WriteLn('[RND] Check skill stats');
    Stats.HoverSkill(SKILL_MINING, srl.GaussRand(2000,170), Random(0,4) > 1);
  end;
  {+-|  TASK  |+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-}
  if (24 * 1.0) > Random(round(CPH) * 24) then {1 per hour}
  begin
    WriteLn('[RND] Check overall stats');
    Stats.Open();
    WaitEx(5000,400);
    Inventory.Open();
  end;
  {+-|  TASK  |+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-}
  if (24 * 1.0) > Random(round(CPH) * 24) then {1 per hour}
  begin
    WriteLn('[RND] Taking a breather');
    if Random(2)=0 then SRL.MouseOffClient();
    WaitEx(45000,3000);
    Players.GetCurrent()^.Login();
    Stats.HoverSkill(SKILL_MINING, srl.GaussRand(2000,170));
  end;
  {+-|  TASK  |+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-}
  if (24 * 0.5) > Random(round(CPH) * 24) then {1 per 2 hours}
  begin
    WriteLn('[RND] Doing misc stuff');
    if Random(2) = 0 then
      Gametabs.Open(tabFriends);

    WaitEx(3000,200);
    if Random(0, 9) = 0 then
    begin
      if Random(2)=0 then SRL.MouseOffClient();
      WaitEx(30000,2200);
    end;

    if Random(0, 9) > 3 then
    begin
      Stats.HoverSkill(SKILL_MINING, srl.GaussRand(2000,170), Random(0,4) > 1);
      WaitEx(2500,300);
    end;
  end;
  {+-|  TASK  |+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-}
  if (24 * 0.25) > Random(round(CPH) * 24) then {1 per 4 hours}
  begin
    PauseLen := Trunc(srl.GaussRand(1000*60*35, 1000*60*5)); //30-40 minutes norm
    WriteLn('[RND] Pausing for ', SRL.MsToTime(PauseLen, Time_Formal));

    Logout.Open();            WaitEx(700,90);
    Logout.ClickLogout();     WaitEx(700,90);
    SRL.MouseOffClient();

    repeat
      Wait(Max(PauseLen, 1000*60*5));
      PauseLen -= 1000*60*5;
      WriteLn('[RND] ', SRL.MsToTime(PauseLen, Time_Formal), ' left of the break');
    until PauseLen < 0;
  end;

  Players.GetCurrent()^.Login();
end;

